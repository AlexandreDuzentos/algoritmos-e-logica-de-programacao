Algoritmo "troco"

Var

 precoUnitario, qtd, valorEmDinheiro, troco ,total: real

Inicio

escreva("Preço unitário do produto: ")
leia(precoUnitario)

escreval

escreva("Quantidade comprada: ")
leia(qtd)

escreval

escreva("Dinheiro recebido: ")
leia(valorEmDinheiro)

escreval

 total <- precoUnitario * qtd
 
 troco <- valorEmDinheiro - total

escreva("Troco: ", troco:1:2)





Fimalgoritmo